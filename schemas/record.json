{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://github.com/karlhulme/djsonotron/schemas/record.json",
  "title": "A jsonotron record schema.",
  "description": "A record.",
  "type": "object",
  "properties": {
    "system": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "pluralName": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "deprecated": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "value": "string"
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "propertyType": {
            "oneOf": [{
              "enum": ["std/positiveInteger", "std/integer"]
            }, {
              "type": "string"
            }]
          },
          "isRequired": {
            "type": "boolean"
          },
          "isArray": {
            "type": "boolean"
          },
          "isNull": {
            "type": "boolean"
          },
          "deprecated": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "summary",
          "propertyType"
        ]
      }
    }
  },
  "required": [
    "system",
    "name",
    "pluralName",
    "summary",
    "properties"
  ]
}
