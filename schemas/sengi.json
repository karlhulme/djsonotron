{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://github.com/karlhulme/djsonotron/schemas/sengi.json",
  "title": "Sengi table schema.",
  "description": "A table that is managed by Sengi.",
  "type": "object",
  "properties": {
    "system": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "pluralName": {
      "type": "string"
    },
    "idPrefix": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "deprecated": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "value": "string"
          }
        }
      }
    },
    "readOnlyFieldNames": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "redactFieldNames": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {}
        }
      }
    },
    "changeFieldNames": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "useSinglePartition": {
      "type": "boolean"
    },
    "storePatches": {
      "type": "boolean"
    },
    "trackChanges": {
      "type": "boolean"
    },
    "policy": {
      "type": "object",
      "properties": {
        "canDeleteDocuments": {
          "type": "boolean"
        },
        "canFetchWholeCollection": {
          "type": "boolean"
        },
        "canReplaceDocuments": {
          "type": "boolean"
        },
        "maxDigests": {
          "type": "number"
        },
        "maxOpIds": {
          "type": "number"
        }
      }
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "propertyType": {
            "type": "string"
          },
          "isRequired": {
            "type": "boolean"
          },
          "isArray": {
            "type": "boolean"
          },
          "deprecated": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "summary",
          "propertyType"
        ]
      }
    }
  },
  "required": [
    "system",
    "name",
    "pluralName",
    "idPrefix",
    "summary",
    "properties"
  ]
}
