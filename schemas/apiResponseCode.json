{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/karlhulme/djsonotron/main/schemas/apiResponseCode.json",
  "title": "OpenAPI response code schema.",
  "description": "The code and description of an OpenAPI response code.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "code": {
      "type": "number"
    },
    "summary": {
      "type": "string"
    }
  },
  "required": ["name", "summary"]
}
