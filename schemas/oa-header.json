{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://github.com/karlhulme/djsonotron/schemas/oa-header.json",
  "title": "OpenAPI header schema.",
  "description": "The type and description of an OpenAPI header.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "type": {
      "$ref": "https://github.com/karlhulme/djsonotron/schemas/types.json"
    },
    "isRequired": {
      "type": "boolean"
    },
    "isDeprecated": {
      "type": "boolean"
    }
  },
  "required": ["name", "summary", "type"]
}
